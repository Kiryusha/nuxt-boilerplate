no-select()
  pointer-events none
  user-select none

a-reset()
  text-decoration none
  color inherit

ul-reset()
  list-style none
  margin 0
  padding 0

button-reset()
  background none
  border 0
  padding 0
  outline none
  cursor pointer

absolute-centered()
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  margin auto

placeholder()
  &::-webkit-input-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

pre-tablet()
  @media (max-width: 1210px)
    {block}

tablet()
  @media (max-width: 1179px)
    {block}

mobile()
  @media (max-width: 767px)
    {block}

mobile-l()
  @media (max-width: 424px)
    {block}

mobile-m()
  @media (max-width: 374px)
    {block}

desktop-only()
  @media (min-width: 1180px)
    {block}

top-line()
  &:before
    content: ''
    display: block
    height: 1px;
    width: 140vw
    left: -20vw
    right: -20vw
    background: #ec
    position: absolute
    top: 0

bottom-line()
  &:after
    content: ''
    display: block
    height: 1px;
    width: 140vw
    left: -20vw
    right: -20vw
    background: #ec
    position: absolute
    bottom: 0
